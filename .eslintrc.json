{
    "parser": "@typescript-eslint/parser",
    "env" : {
        "browser" : true,
        "node" : true,
        "es6" : true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off",
        "comma-dangle": "error",
        "quotes": ["error", "single"],
        "indent": ["error", 4],
        "semi": ["error", "always"]
    }
}
